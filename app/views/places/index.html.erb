<h1> Welcome to my Second Web Application <h1>

<% @places.each do |place|%>
    <div class="booyah-box">
        <h1><%= link_to place.name, place_path(place) %></h1>
        <i><%= place.address %></i><br /><br />
        <p><%= place.description %></p><br />

        <% if place.user.present? %>
            <small><%= place.user.email %></small>
        <% end %>
    <% if place.comment.present?%>
        <div class="col-12">
         <blockquote>
            <% if place.comment.last.humanized_rating.present? %>
            <b><%= place.comment.last.humanized_rating %></b> -
            <% end %>
            <%= place.comment.last.message %>
            <small><%= place.comment.last.user.email %></small>
         </blockquote>
        </div>
     <% end %>   
     </div>

    <hr />
<% end %>
